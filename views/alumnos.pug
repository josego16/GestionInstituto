extends layout
block content
  h1 Lista de alumnos
  table
    thead
      tr
        th ID
        th Nombre
        th Apellido
        th Email
        th Telefono
        th Acciones
    tbody
        each alumno in alumnos
          tr
            td= alumno.id
            td= alumno.nombre
            td= alumno.apellidos
            td= alumno.email
            td= alumno.telefono
            td
              a(href=`/alumnos-edit/${alumno.id}`) Editar
              span |
              a(href=`/alumnos-delete/${alumno.id}`) Eliminar
            br
    p
      a(href='/alumnos-add') Agregar nuevo alumno