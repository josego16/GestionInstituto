extends layout

block content
  h1 Editar alumno
  form(action= `/alumnos-edit/${alumno.id}`, method='post')
    label(for='nombre') Nombre:
    input.form-control(type='text', id='nombre', name='nombre', value=alumno.nombre, required=true)
    br
    label(for='apellidos') Apellidos:
    input.form-control(type='text', id='apellidos', name='apellidos', value=alumno.apellidos, required=true)
    br
    label(for='email') Email:
      input.form-control(type='text', id='email', name='email', value=alumno.email, required=true)
    br
    label(for='telefono') Telefono:
      input.form-control(type='text', id='telefono', name='telefono', value=alumno.telefono, required=true)
    br
    button(type='submit') Guardar Cambios
    br
  a(href='/alumnos') Volver a la Lista