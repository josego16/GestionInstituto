extends layout

block content
    h1 Agregar alumno
    form(action='/alumnos-add', method='post')
        label(for='nombre') Nombre:
        input(type='text', id='nombre', name='nombre', required=true)
        br
        label(for='apellidos') Apellido:
        input(type='text', id='apellidos', name='apellidos', required=true)
        br
        label(for='email') Email:
        input(type='text', id='email', name='email', required=true)
        br
        label(for='telefono') Telefono:
        input(type='text', id='telefono', name='telefono', required=true)
        br
        button(type='submit') Agregar Alumno
    a(href='/') Volver a la Lista